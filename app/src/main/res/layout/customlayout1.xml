<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/custom_lay"
    android:padding="10dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/productimage"
        android:src="@drawable/tv"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/producttype"
        android:textStyle="bold"
        android:text="Telivision"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/productimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:id="@+id/productbrand"
        android:text="Sony"
        android:textSize="13dp"
        android:layout_below="@+id/producttype"
        android:layout_toRightOf="@+id/productimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:id="@+id/productid"
        android:textStyle="bold"
        android:text="1"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/producttype" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/postedby"
        android:textColor="@color/black"
        android:text="Posted By: "
        android:textSize="17dp"
        android:layout_below="@+id/productrate"
        android:layout_toRightOf="@+id/productimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/ownername"
        android:text="Govind Raj"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_below="@+id/productrate"
        android:layout_toRightOf="@+id/postedby"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/productimage"
        android:id="@+id/productrate"
        android:text="INR 700"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/productbrand"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/locationname"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="KOCHI"
        android:textSize="17dp"
        android:layout_below="@+id/postedby"
        android:layout_toRightOf="@+id/productimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/status"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:text="Status:"
        android:textSize="17dp"
        android:layout_below="@+id/locationname"
        android:layout_toRightOf="@+id/productimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/stat"
        android:textColor="@color/black"
        android:text="Active"
        android:textSize="17dp"
        android:layout_below="@+id/locationname"
        android:layout_toRightOf="@+id/status"/>

</RelativeLayout>